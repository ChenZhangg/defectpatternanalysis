		<mapping
			resource="cn/edu/fudan/se/defectAnalysis/conf/track/code_line_change.hbm.xml" />
		<mapping
			resource="cn/edu/fudan/se/defectAnalysis/conf/track/bug_survival_time.hbm.xml" />

	</session-factory>
</hibernate-configuration>
